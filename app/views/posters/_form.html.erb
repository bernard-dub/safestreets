<%= form_with(model: poster, class: "contents") do |form| %>
  <% if poster.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(poster.errors.count, "erreur") %> ont empêché cette action :</h2>

      <ul>
        <% poster.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, "Votre slogan" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  
  <div class="my-5">
    <%= form.label :email, "Votre adresse e-mail" %>
    <%= form.text_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  
  <% if current_admin %>
	  <div class="my-5">
	    <%= form.label :status, "Statut" %>
	    <%= form.select :status, Poster::STATUS %>
	  </div>
  
	  <div class="my-5">
	    <%= form.label :image %>
	    <%= form.file_field :image, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	  </div>
  
	  <div class="my-5">
	    <%= form.label :places, "Lieux" %>
	    <%= form.text_field :place_list, value: @poster.place_list.to_s, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	  </div>

	  <div class="my-5">
	    <%= form.label :score %>
	    <%= form.number_field :score, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	  </div>
  <% end %>

  <div class="inline">
    <%= form.submit "Envoyer", class: "rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-700 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
