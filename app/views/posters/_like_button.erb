	<%= turbo_frame_tag "poster_like_#{poster.id}" do %>
		<% if !@likes.include?(poster) %>
			<%= link_to poster_like_path(poster), class: "border border-pink-600 bg-pink-100 text-pink-600 hover:border-4 mb-1 hover:mb-0 font-bold mt-4 py-1 px-3 rounded-full inline-flex items-center" do %>
				<%= render "layouts/icons/heart" %> <%= poster.score %>
			<% end %>
		<% else %>
			<%= link_to poster_unlike_path(poster), class: "border border-pink-600 bg-pink-600 text-pink-100 hover:border-4 mb-1 hover:mb-0 font-bold mt-4 py-1 px-3 rounded-full inline-flex items-center" do %>
				<%= render "layouts/icons/heart" %> <%= poster.score %>
			<% end %>
		<% end %>
	<% end %>