<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @poster %>
	<div class="w-full center static">
    <div class="ml-20 my-2 flex text-center mx-auto items-center">
      <%= button_to 'Supprimer', poster_path(@poster), method: :delete, class: "bg-gray-200 hover:bg-gray-300 text-gray-600 font-bold py-1 px-3 mx-2 rounded-full inline-block" %>
    
    <%= link_to 'Retour', posters_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-600 font-bold py-1 px-3 mx-2 rounded-full inline-block" %>
	</div>
	</div>
  </div>
</div>
